@model Dictionary<string,string>
@{
    ViewData["Title"] = "Index";
}

<form asp-action="Add" asp-controller="HashType" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <label for="name" class="col-form-label">Key</label>
        <input type="text" name="key" class="form-control" />
    </div>
    <div class="form-group">
        <label for="name" class="col-form-label">Value</label>
        <input type="text" name="value" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

@foreach (var item in Model)
{

    <h2>@item.Key -> @item.Value <a asp-controller="HashType" asp-action="Remove" asp-route-key="@item.Key" class="btn btn-danger">Sil</a></h2>
}
