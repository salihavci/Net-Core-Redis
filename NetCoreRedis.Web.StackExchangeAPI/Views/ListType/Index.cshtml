@model List<string>
@{
    ViewData["Title"] = "Index";
}
<a asp-controller="ListType" asp-action="DeleteFirstItem" class="btn btn-danger">İlk veriyi sil</a>
<a asp-controller="ListType" asp-action="DeleteLastItem" class="btn btn-danger">Son veriyi sil</a>
<form asp-action="Add" asp-controller="ListType" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <label for="name" class="col-form-label">Name</label>
        <input type="text" name="name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />    
    </div>
</form>

@foreach (var item in Model)
{

    <h2>@item <a asp-controller="ListType" asp-action="Remove" asp-route-name="@item" class="btn btn-danger">Sil</a></h2>
}